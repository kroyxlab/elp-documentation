.navbar
	border-bottom 3px solid $accentColorDark

.navbar, .navbar .links
	background-color $accentColor !important

.nav-link .router-link-exact-active .router-link-active
	color white !important

.nav-links a:hover, .nav-links a.router-link-active
	color white !important

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active
	border-color $accentColorDark !important

.navbar .links
	background-color red

.navbar, .site-name.can-hide, .navbar .links .icon.outbound
	color white !important

.dropdown-wrapper .nav-dropdown .dropdown-item a
	color $accentColorDark
	border-bottom 1px solid transparent !important

.dropdown-wrapper .dropdown-title
	color white !important

.navbar .links .icon.outbound
	color $accentColorDark !important

.dropdown-wrapper .nav-dropdown .dropdown-item a:hover
	color $accentColorDark !important
	border-bottom 1px solid $accentColor !important

.dropdown-wrapper .nav-dropdown .dropdown-item a.router-link-active
	color $accentColorDark !important
	text-decoration underline

@media (max-width: 500px)
	
	.dropdown-wrapper .dropdown-title
		color #2c3e50 !important

// Sidebar

.sidebar
	background-color lighten($accentColor, 99%)
	border none
	box-shadow 1px 0px 4px grey

.sidebar .sidebar-link:hover
	border-right 3px solid $accentColor

.sidebar .sidebar-sub-headers .active.sidebar-link
	font-weight bold
	color $accentColorDark

// Content

.page a
	font-weight bold

h1, h2, h3
	color $accentColorDark

// Table 

th, td
	border-color desaturate($accentColorLight, 80%)

table .icon.outbound
	display none

iframe 
	border none
	margin 20px
	overflow hidden !important
	height 230px;
	border-bottom solid 2px $accentColor
